<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D89042"/> <!-- color when button is pressed -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFC987"/> <!-- default button color -->
            <corners android:radius="8dp"/>
            <stroke
                android:width="2dp"
                android:color="#000000"/> <!-- border color -->
        </shape>
    </item>
</selector>
