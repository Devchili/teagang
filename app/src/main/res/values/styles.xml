<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#F4CC9B</item>
        <item name="colorPrimaryDark">#E0B586</item>
        <item name="colorAccent">#F4CC9B</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CoffeeButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#F4CC9B</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">#FFFFFF</item> <!-- Custom background color -->
        <item name="android:layout_height">70dp</item> <!-- Custom height -->
    </style>

</resources>